<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Detalhes_postagemFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/ice"
            tools:ignore="MissingConstraints" />


        <TextView
            android:id="@+id/id_texto_descritivo"
            android:layout_width="350dp"
            android:layout_height="78dp"
            android:layout_marginTop="20dp"
            android:text="@string/lorem_ipsum_is_simply_dummy_text_of_the_printing_and_typesetting_industry_lorem_ipsum_has_been_the_industry_s_standard_dummy_text"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.524"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView8" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="359dp"
            android:layout_height="142dp"
            android:layout_marginStart="31dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="33dp"
            android:src="@drawable/img_medico"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/id_til"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/id_til"
            android:layout_width="358dp"
            android:layout_height="42dp"
            android:layout_marginStart="31dp"
            android:layout_marginEnd="22dp"
            android:text="@string/_100_dos_psicopatas_bebem_gua_ao_nmenos_2x_ao_dia"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="210dp" />

        <TextView
            android:id="@+id/id_nome_medico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="316dp"
            android:text="@string/dr_gabriel"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/id_detalhes" />

        <TextView
            android:id="@+id/id_detalhes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="141dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="141dp"
            android:text="@string/detalhes"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="40dp"
            android:layout_height="33dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="60dp"
            android:contentDescription="@string/todo1"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/botaoDadosPessoais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="32dp"
            android:text="Comentar"
            android:textColor="#3E2723"
            app:circularflow_defaultRadius="32dp"
            app:circularflow_radiusInDP="32dp"
            app:cornerRadius="32dp"
            app:layout_constraintCircleRadius="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/id_texto_descritivo" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="45dp"
            android:layout_height="28dp"
            android:layout_marginStart="128dp"
            android:layout_marginTop="64dp"
            android:src="@drawable/ic_curtida"
            app:layout_constraintStart_toEndOf="@+id/id_nome_medico"
            app:layout_constraintTop_toBottomOf="@+id/id_detalhes" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="40dp"
            android:layout_height="29dp"
            android:layout_marginStart="66dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="55dp"
            android:src="@drawable/ic_baseline_mode_comment_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.666"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/id_detalhes" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>